{% extends "base.html.j2" %}

{% block body %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do List</title>
    <style>
        body, html {
            font-family: 'OpenDyslexic', sans-serif;
            background-color: #F0E3CE;
            margin: 0px;
            height: 100%;
            overflow-x: hidden; /* Allow vertical scrolling */
        }

        .bg-img {
            background-image: url("{{ url_for('static', filename='Neurocator Prototype.jpg') }}");
            height: 100%;
            width: 100%;
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            position: fixed;
            top: 0;
            left: 0;
            z-index: -1;
            display: block;
        }

        .content {
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: center;
            text-align: center;
            padding-top: 20px;
            padding-bottom: 60px; /* Add extra padding at the bottom */
        }

        .container {
            display: flex;
            flex-direction: row;
            gap: 20px;
            margin-top: 50px;
            justify-content: center;
            width: 100%;
        }

        .list-container {
            background-color: #f5e8d8;
            border-radius: 20px;
            padding: 20px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            width: 450px; /* Increased width */
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            position: relative;
        }

        .list-container::before {
            content: '';
            position: absolute;
            top: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 20px;
            background-color: #f0e3ce;
            border-radius: 10px 10px 0 0;
        }

        .list-container h1 {
            text-align: left;
            color: #333;
            margin-bottom: 20px;
            font-size: 1.5em;
            font-weight: bold;
        }

        .list-container form {
            display: flex;
            justify-content: space-between;
            width: 100%;
            margin-bottom: 20px;
        }

        .list-container input[type="text"] {
            flex: 1;
            padding: 10px;
            margin-right: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
            font-size: 1em;
        }

        .list-container input[type="submit"] {
            padding: 10px 20px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1em;
        }

        .list-container ul {
            list-style-type: none;
            padding: 0;
            width: 100%;
        }

        .list-container li {
            padding: 10px;
            border-bottom: 1px solid #ccc;
            display: flex;
            justify-content: flex-start; /* Align items to the start */
            align-items: center; /* Center items vertically */
            font-size: 1.2em;
            text-align: left; /* Align text to the left */
            width: 100%;
        }

        .list-container li input[type="checkbox"] {
            width: 30px; /* Larger checkbox */
            height: 30px; /* Larger checkbox */
            margin-right: 10px; /* Space between checkbox and text */
        }

        .completed {
            text-decoration: line-through;
            color: #888;
        }

        .complete-button {
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 3px;
            cursor: pointer;
            padding: 2px 6px;
        }
    </style>
</head>
<body>
    <div class="bg-img" id="backgroundImage"></div>
    <div class="content">
        <div class="container">
            <div class="list-container">
                <h1>Make To-Do List</h1>
                <form action="/todo" method="POST" id="taskForm">
                    <input type="text" name="task" placeholder="Insert Task" id="taskInput" required>
                    <input type="submit" value="Add">
                </form>
                <ul id="taskList">
                    {% for task in tasks %}
                    {% if loop.index <= 8 %}
                    <li class="{{ 'completed' if task[2] else '' }}">
                        <form action="/complete/{{ task[0] }}" method="POST" style="display: flex; align-items: center;">
                            <input type="checkbox" onclick="this.form.submit()" {{ 'checked' if task[2] else '' }}>
                            <span style="flex-grow: 1;">{{ task[1] }}</span>
                        </form>
                    </li>
                    {% endif %}
                    {% endfor %}
                </ul>
            </div>
            {% if tasks|length > 8 %}
            <div class="list-container">
                <h1>Continued</h1>
                <ul id="additionalTaskList">
                    {% for task in tasks[8:] %}
                    <li class="{{ 'completed' if task[2] else '' }}">
                        <form action="/complete/{{ task[0] }}" method="POST" style="display: flex; align-items: center;">
                            <input type="checkbox" onclick="this.form.submit()" {{ 'checked' if task[2] else '' }}>
                            <span style="flex-grow: 1;">{{ task[1] }}</span>
                        </form>
                    </li>
                    {% endfor %}
                </ul>
            </div>
            {% endif %}
        </div>
    </div>
    <script>
        // JavaScript to submit form on Enter key press and refocus input
        document.getElementById('taskForm').addEventListener('submit', function (e) {
            e.preventDefault(); // Prevent form from submitting the traditional way
            const taskInput = document.getElementById('taskInput');
            const taskList = document.getElementById('taskList');
            const additionalTaskList = document.getElementById('additionalTaskList');

            const task = taskInput.value;
            if (task) {
                const li = document.createElement('li');
                li.innerHTML = `
                    <form action="/complete/" method="POST" style="display: flex; align-items: center;">
                        <input type="checkbox" onclick="this.form.submit()">
                        <span style="flex-grow: 1;">${task}</span>
                    </form>
                `;
                if (taskList.children.length < 8) {
                    taskList.appendChild(li);
                } else {
                    additionalTaskList.appendChild(li);
                }

                taskInput.value = ''; // Clear the input field
                taskInput.focus(); // Refocus the input field
            }
        });

        document.getElementById('taskInput').addEventListener('keypress', function (e) {
            if (e.key === 'Enter') {
                e.preventDefault(); // Prevent form from submitting the traditional way
                document.getElementById('taskForm').submit(); // Submit the form programmatically
            }
        });
    </script>
</body>
</html>
{% endblock %}