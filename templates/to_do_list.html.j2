{% extends "base.html.j2" %}

{% block styles %}
<style>
    .todo-container {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 50px;
    }
    .list-container {
        background-color: #f9f1d7;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        width: 300px;
        display: flex;
        flex-direction: column;
    }
    .list-container h1 {
        text-align: left;
        color: #333;
        margin-bottom: 20px;
    }
    .list-container form {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }
    .list-container input[type="text"] {
        flex: 1;
        padding: 5px;
        margin-right: 10px;
    }
    .list-container input[type="submit"] {
        padding: 5px 10px;
        background-color: #28a745;
        color: white;
        border: none;
        border-radius: 3px;
        cursor: pointer;
    }
    .list-container ul {
        list-style-type: none;
        padding: 0;
    }
    .list-container li {
        padding: 10px;
        border-bottom: 1px solid #ccc;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .completed {
        text-decoration: line-through;
        color: #888;
    }
    .complete-button {
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 3px;
        cursor: pointer;
        padding: 2px 6px;
    }
</style>
{% endblock %}

{% block content %}
<div class="todo-container">
    <div class="list-container">
        <h1>Make To-Do List</h1>
        <form action="/todo" method="POST">
            <input type="text" name="task" placeholder="Insert Task" required>
            <input type="submit" value="Add">
        </form>
        <ul>
            {% for task in tasks %}
            <li class="{{ 'completed' if task[2] else '' }}">
                <input type="checkbox" {% if task[2] %}checked{% endif %} onclick="this.nextElementSibling.submit()">
                <form action="/complete/{{ task[0] }}" method="POST" style="display: inline;">
                    {{ task[1] }}
                    <button type="submit" class="complete-button" style="display:none;">{{ 'Undo' if task[2] else 'Complete' }}</button>
                </form>
            </li>
            {% endfor %}
        </ul>
    </div>
    <div class="list-container">
        <h1>Insert Task</h1>
        <ul>
            {% for task in tasks %}
            <li class="{{ 'completed' if task[2] else '' }}">
                <input type="checkbox" {% if task[2] %}checked{% endif %} onclick="this.nextElementSibling.submit()">
                <form action="/complete/{{ task[0] }}" method="POST" style="display: inline;">
                    {{ task[1] }}
                    <button type="submit" class="complete-button" style="display:none;">{{ 'Undo' if task[2] else 'Complete' }}</button>
                </form>
            </li>
            {% endfor %}
        </ul>
    </div>
</div>
{% endblock %}