<script>
  $(document).ready(function () {
    $('.group-button').click(function () {
      var group = $(this).data('group');
      console.log(group);
      // Add border classes to elements with matching group
      $('.group-button[data-group="' + group + '"]').addClass("border-2 border-black");
      // Remove border classes from other elements
      $('.group-button:not([data-group="' + group + '"])').removeClass("border-2 border-black");

      if (group === 'All') {
        $('.resource-item').show();
      } else {
        $('.resource-item').hide();
        $('.resource-item[data-group="' + group + '"]').show();
      }
    });
  });

