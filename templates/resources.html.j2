        <button data-group="All" class="group-button mx-2 my-2 px-4 py-2 bg-brand-primary text-white rounded">All</button>
        <button data-group="Mental Health" class="group-button mx-2 my-2 px-4 py-2 bg-brand-primary text-white rounded">Mental Health</button>
        <button data-group="Autism" class="group-button mx-2 my-2 px-4 py-2 bg-brand-primary text-white rounded">Autism</button>
        <button data-group="ADHD" class="group-button mx-2 my-2 px-4 py-2 bg-brand-primary text-white rounded">ADHD</button>
        <button data-group="Dyslexia" class="group-button mx-2 my-2 px-4 py-2 bg-brand-primary text-white rounded">Dyslexia</button>
        <button data-group="Self-Advocacy" class="group-button mx-2 my-2 px-4 py-2 bg-brand-primary text-white rounded">Self-Advocacy</button>
        <button data-group="Organization" class="group-button mx-2 my-2 px-4 py-2 bg-brand-primary text-white rounded">Organization</button>
      </div>

      <div id="resource-container" class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
        <!-- Resource items will be dynamically inserted here -->
      </div>
    </div>
  </div>
</div>

