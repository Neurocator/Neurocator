        margin-bottom: 10px;
    }

    .post-title {
        font-size: 1.25rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
    }

    .post-content {
        font-size: 1rem;
        color: #555;
    }

    .add-post-link {
        color: #ba80c4;
