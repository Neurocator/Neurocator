    }
    .subpoints-list {
        list-style: circle;
        padding-left: 20px;
    }
    .subpoint {
        background-color: #9575cd;
        margin-top: 5px;
    }
    .crossed-off {
        text-decoration: line-through;
        color: #a9a9a9;
    }
</style>
{% endblock %}