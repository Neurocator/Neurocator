{% block body %}
<style>
    body, html {
        font-family: 'OpenDyslexic', sans-serif;
        background-color: #f0e3ce;
        margin: 0px;
        height: 100%;
        overflow-x: hidden; /* Allow vertical scrolling */
    }

    .bg-img {
        background-image: url("{{ url_for('static', filename='Neurocator Prototype.jpg') }}");
        height: 100%;
        width: 100%;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        position: fixed;
        top: 0;
        left: 0;
        z-index: -1;
        display: block;
    }

    .content {
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
        text-align: center;
        padding-top: 20px;
        padding-bottom: 60px; /* Add extra padding at the bottom */
    }

    .about-container {
        background: #B0D39B;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0px 0px 15px rgba(0,0,0,0.3);
        max-width: 900px;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 20px auto;
    }

    .about-title {
        font-size: xx-large;
        color: #333;
        margin-bottom: 20px;
    }

    .about-text {
        color: #333;
        font-size: 1.3em;
        text-align: center;
        margin-bottom: 20px;
    }

    .team-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        padding: 20px;
    }

    .team-member {
        margin: 40px; /* Increased margin for larger spacing */
        text-align: center;
        color: #333;
        position: relative;
        width: 250px; /* Adjusted for better fit */
        height: 250px; /* Adjusted for better fit */
    }

    .team-member img {
        border-radius: 10px;
        box-shadow: 0px 0px 15px rgba(0,0,0,0.3);
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: all 0.3s ease-in-out;
    }

    .team-member:hover img {
        filter: brightness(70%);
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        color: white;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        opacity: 0;
        transition: opacity 0.3s ease-in-out;
        border-radius: 10px;
    }

    .team-member:hover .overlay {
        opacity: 1;
    }

    .overlay p {
        margin: 5px 0;
    }

    .team-member h3 {
        font-size: 1.5em;
        margin: 10px 0 5px 0;
    }

    .team-member p {
        font-size: 1em;
        margin: 5px 0;
    }

    .spacing {
        margin-top: 40px; /* Add spacing between rows */
    }
    
    .banner {
        background-color: #B0D39B;
    }

    .h1 {
    text-align: center;
    padding-top: 20px;
    font-size: 30px;
    color: #ba80c4;
    }
    
</style>


