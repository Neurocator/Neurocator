{% block body %}
<style>
    body, html {
        font-family: 'OpenDyslexic', sans-serif;
        background-color: #f0e3ce;
        margin: 0px;
        height: 100%;
        overflow-x: hidden; /* Allow vertical scrolling */
    }

    .bg-img {
        background-image: url("{{ url_for('static', filename='Neurocator Prototype.jpg') }}");
        height: 100%;
        width: 100%;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        position: fixed;
        top: 0;
        left: 0;
        z-index: -1;
        display: block;
    }

    .content {
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
        text-align: center;
        padding-top: 20px;
        padding-bottom: 60px; /* Add extra padding at the bottom */
    }

    .faq-container {
        background: rgba(255, 255, 255, 0.95); /* Slightly higher opacity for better readability */
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.2);
        max-width: 900px;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 20px auto;
    }

    .faq-title {
        font-size: 2em;
        color: #333;
        margin-bottom: 20px;
    }

    .faq-text {
        color: #333;
        font-size: 1.5em;
        text-align: center;
        margin-bottom: 20px;
    }

    .faq-item {
        margin-bottom: 20px;
        width: 100%;
    }

    .faq-item .question-wrapper {
        display: flex;
        align-items: center;
    }

    .faq-item button.question {
        width: calc(100% - 40px);
        text-align: left;
        background-color: #a3d6a3; /* Light green color */
        border: none;
        font-size: 1.2em;
        font-weight: bold;
        color: #333;
        cursor: pointer;
        padding: 15px 20px;
        border-radius: 20px; /* Rounded corners */
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .faq-item button.question:focus {
        outline: 2px solid #333; /* High contrast outline for focus */
        outline-offset: 4px; /* Better visibility */
    }

    .faq-item button svg {
        transform: rotate(0);
        transition: transform 0.3s ease; /* Reduced animation for better sensory experience */
    }

    .faq-item.active button svg {
        transform: rotate(180deg); /* Rotate arrow when active */
    }

    .faq-item .content {
        display: none;
        padding: 20px;
        font-size: 1.2em; /* Slightly larger font size */
        color: #333;
        background-color: #e5d2a0; /* Light beige color */
        border-radius: 20px; /* Rounded corners */
        margin-top: 10px;
    }

    .faq-item.active .content {
        display: block;
    }

    .diction-btn {
        background-color: #4CAF50; /* Green */
        border: none;
        color: white;
        padding: 10px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 1em;
        border-radius: 50%;
        cursor: pointer;
        margin-right: 10px;
    }
</style>

